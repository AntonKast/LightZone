#!/bin/sh
#
# LightZone startscript
#
echo Starting LightZone version 3.9.1 ...
echo with options : ${@}

totalmem=`cat /proc/meminfo | grep MemTotal | sed -r 's/.* ([0-9]+) .*/\1/'`
if [ $totalmem -ge 1024000 ]; then
        maxmem=$(( $totalmem / 2 ))
else
        maxmem=512000
fi

(cd "/opt/lightzone" && LD_LIBRARY_PATH="/opt/lightzone" exec java -Xmx${maxmem}k -Djava.library.path="/opt/lightzone" -Dfile.encoding=UTF8 -classpath "/opt/lightzone/*" com.lightcrafts.platform.linux.LinuxLauncher ${@} )
